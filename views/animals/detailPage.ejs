<%- include('../layout/header') %>
    <div class="container">
        <div class="fs-1 fw-bold text-center m-4">
            <%=resultAF.name%>
        </div>
        <div class="row">
            <div class="col-sm">
                <img src="<%=resultAF.imageUrl%>" alt="" width="500">
            </div>
            <div class="col-sm">
                <table class="table">
                    <tr>
                        <td>Age</td>
                        <td>=</td>
                        <td>
                            <%=resultAF.age%>
                        </td>
                    </tr>
                    <tr>
                        <td>Sex</td>
                        <td>=</td>
                        <td>
                            <%=resultAF.sex%>
                        </td>
                    </tr>
                    <tr>
                        <td>Class Type</td>
                        <td>=</td>
                        <td>
                            <%=classTypeData[0].name%>
                        </td>
                    </tr>
                    <tr>
                        <td>Habitat</td>
                        <td>=</td>
                        <td>
                            <%=habitatData[0].name%>
                        </td>
                    </tr>
                    <tr>
                        <td>Food</td>
                        <td>=</td>
                        <td>
                            <ul class="list-group">
                                <%resultAF.foods.forEach(food=>{%>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <%=food.name%>
                                            <a class=" btn btn-sm btn-danger"
                                                href="/animalfoods/AF/delete/<%= resultAF.id %>/<%= food.id %>">-
                                                Delete</a>
                                    </li>
                                    <%})%>
                            </ul>
                            <a class="btn btn-sm btn-success my-2" href="/animalfoods/AF/add/<%= resultAF.id %>">+
                                Add</a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <%- include('../layout/footer') %>