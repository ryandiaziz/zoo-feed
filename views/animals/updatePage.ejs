<%- include('../layout/header') %>
    <!-- <h1>UPDATE ANIMAL</h1> -->
    <div class="container">
        <form action="/animals/update/id" method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="name" value="<%=animal.name%>">
            </div>
            <div class="mb-3">
                <label class="form-label">Age</label>
                <input type="text" class="form-control" name="age">
            </div>
            <div class="mb-3">
                <label class="form-label">Sex</label>
                <input type="text" class="form-control" name="sex">
            </div>
            <div class="mb-3">
                <label class="form-label">Image</label>
                <input type="text" class="form-control" name="imageUrl">
            </div>
            <div class="mb-3">
                <label class="form-label">Class Type</label>
                <select name="classTypeId">
                    <% classTypes.forEach(classType=>{ %>
                        <option value="<%= classType.id%>">
                            <%= classType.name%>
                        </option>
                        <%})%>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Hibitat</label>
                <select name="habitatId">
                    <% habitats.forEach(habitat=>{ %>
                        <option value="<%= habitat.id%>">
                            <%= habitat.name%>
                        </option>
                        <%})%>
                </select>
            </div>
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Submit">
            </div>
        </form>
    </div>
    <%- include('../layout/footer') %>