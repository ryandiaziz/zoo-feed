<%- include('../layout/header') %>
  <h1 class="text-center">ANIMAL</h1>
  <!-- Floating Button -->
  <a href="/animals/add" class="float">
    <i class="fa-solid fa-plus my-float"></i>
  </a>
  <div class="container my-4">
    <div class="row">
      <% result.forEach(animal=>{ %>
        <div class="card m-2" style="width:250px">
          <img src="<%= animal.imageUrl%>" class="object-fit-cover border rounded my-2" alt="..." height="200">
          <div class="card-body">
            <h5 class="card-title">
              <%= animal.name%>
            </h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Age : <%= animal.age%>
            </li>
            <li class="list-group-item">Sex : <%= animal.sex%>
            </li>
          </ul>
          <div class="card-body" role="group" aria-label="Basic mixed styles example">
            <div class="btn-group m2">
              <a href="/animals/detail/<%=animal.id%>" class="btn btn-primary">Detail</a>
              <a href="/animals/update/<%=animal.id%>" class="btn btn-warning">Update</a>
              <a href="/animals/delete/<%= animal.id%>" class="btn btn-danger">Delete</a>
            </div>
          </div>
        </div>
        <%}) %>
    </div>
  </div>
  <%- include('../layout/footer') %>