<%- include('../layout/header') %>
<div class="container">
    <div class="fs-1 fw-bold text-center m-4">
        <%=resultAF.name%>
    </div>
    <div class="row">
        <div class="col-sm">
            <img src="<%=resultAF.imageUrl%>" alt="" width="500">
        </div>
        <div class="col-sm">
            <table class="table">
                <tr>
                    <td>Corresponding Animals</td>
                    <td>:</td>
                    <td>
                        <div class="container">
                            <div class="row">
                              <% resultAF.animals.forEach(animal=>{ %>
                                <div class="card m-2" style="width: 200px; height: 200px; ">
                                  <img src="<%= animal.imageUrl%>" class="object-fit-cover border rounded my-2" alt="..." height="100" />
                                  <div class="card-body">
                                    <p7 >
                                      <%= animal.name%>
                                    </p7>
                                  </div>

                                  <div class="btn-group btn-sm" role="group" aria-label="Basic mixed styles example">
                                    <a href="/animals/detail/<%=animal.id%>" class="btn btn-primary">Detail</a>
                                  </div>
                                  
                                </div>
                                <%}) %>

                                <div class="card m-2" style="width: 200px; height: 200px; ">
                                    <div class="card-body d-flex justify-content-center align-items-center">
                                        <div class="btn-group btn-sm" role="group" aria-label="Basic mixed styles example">
                                            <a href="/habitats/add/<%=resultAF.id %>" class="btn btn-success"> +Add</a>
                                          </div>
                                    </div>
  
                                </div>
                        
                        
                            </div>



                        </div>
                    </td>
                </tr>
                
            </table>
        </div>
    </div>
</div>

<%- include('../layout/footer') %>

